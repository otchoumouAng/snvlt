{% extends 'base.html.twig' %}

{% block banniere %}
    <!-- Page Header Start -->
    <div class="container-fluid page-exploitant py-5 mb-5 wow fadeIn" data-wow-delay="0.9s">
        <div class="container text-center py-5">
            <h1 class="display-4 text-white animated slideInDown mb-4">Reprises Activités forestières</h1> <a class="btn btn-primary" href="{{ path('liste_reprise_pdf') }}">télécharger la liste</a>
        </div>
    </div>
    <!-- Page Header End -->
{% endblock %}

{% block Contenu %}
    <link rel="stylesheet" href="{{ asset('assets/table/dist/bootstrap-table.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/table/assets/all.css') }}">



    <div class="container mx-auto">
        <h1 class="m-2 text-success">Liste des reprises d'activités au titre de l'exercice {{ exo.annee }} <a href="#"><img
                    src="{{ asset('assets/icons/16x16/pdf2.png') }}" height="32"
                    alt="pdf_reprises"></a></h1>
        <div class="container">
        <table
               class="table"
               data-toggle="table"
               id="tableexploitant"
               data-pagination="true"
               data-language="Fr-fr"
               data-search="true"
               data-pagination-pre-text= "Précédent"
               data-pagination-next-text= "Suivant"
               data-pagination-detail-h-align= "right"
               data-page-list= "[5, 10, 20, 30, 40, 50, All]"
               data-page-value= "All">

            <thead>
            <tr class="bg-light" >
                <th class="fw-bold" data-field="pef" data-sortable="true">
                    Titre forestier
                </th>
                <th class="fw-bold" data-field="rs" data-sortable="true">
                    Raison sociale
                </th>
                <th class="fw-bold" data-field="code" data-sortable="true">
                    Code
                </th>
                <th class="fw-bold" data-field="marteau" data-sortable="true">
                    Marteau
                </th>
                <th class="fw-bold" data-field="autorisation" data-sortable="true">
                    N° Autorisation
                </th>

            </tr>
            </thead>
            <tbody>
            {% for reprise in reprises %}
                <tr>
                    <td class="fw-light">
                        <span class="badge p-1 bg-success fs-5 rounded-4" style="">{{ reprise.pef }}</span>
                    </td>
                    <td class="fw-light">
                        {{ reprise.raisonSocial }}
                    </td>
                    <td class="fw-light">
                        {{ reprise.code }}
                    </td>
                    <td class="fw-light">
                        {{ reprise.marteau }}
                    </td>
                    <td class="fw-light">
                        {{ reprise.autorisation }}
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>

    </div>
    <script src="{{ asset('assets/table/assets/jquery-3.3.1.min.js') }}"></script>
    <script src="{{ asset('assets/jquery-3.6.0.min.js') }}"></script>
    <script src="{{ asset('assets/table/assets/popper.min.js') }}"></script>
    <script src="{{ asset('assets/table/popper.js') }}"></script>
    <script src="{{ asset('assets/table/assets/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/table/dist/bootstrap-table.min.js') }}"></script>
    <script src="{{ asset('assets/table/dist/extensions/toolbar/bootstrap-table-toolbar.min.js') }}"></script>
    <script src="{{ asset('assets/table/dist/extensions/filter-control/bootstrap-table-filter-control.min.js') }}"></script>
    <script src="{{ asset('assets/table/dist/locale/bootstrap-table-fr-FR.min.js') }}"></script>

{% endblock %}