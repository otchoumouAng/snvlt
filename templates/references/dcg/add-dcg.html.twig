{% extends 'template_base.html.twig' %}

{% block Title %}
    {% trans %}SNVLT{% endtrans %} - Centres de Gestion
{% endblock %}

{% block titre_page %}
    <h2 class="text-dark font-weight-bold mb-2">
        <img src="{{ asset('assets/images/webapp/batiment.png') }}" alt="{% trans %}DR{% endtrans %}">  Centre de Gestion - {% trans %}[ADD]{% endtrans %}
    </h2>
{% endblock %}

{% block menu %}
    {% include 'base/menu.html.twig' %}
{% endblock %}

{% block notifs %}
    {% include 'base/notifs.html.twig' %}
{% endblock %}

{% block page_content %}

    <section class="section">
        <div class="card">

            <div class="card-body">
                {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}
                <div class="row bg-white m-1">
                        <div class="col-md-4">
                            <div class="">{{ form_row(form.denomination) }}</div>
                            <div class="">{{
                                form_row(form.personneRessource) }}</div>
                            <div class="">{{ form_row(form.emailPersonneRessource) }}</div>
                            <div class="">{{ form_row(form.mobilePersonneRessource) }}</div>
                        </div>
                </div>
                <hr>
                <a href="{{ path('ref_drs') }}" class="btn btn-sm bg-danger p-2 me-2 ms-5 text-white" style="font-weight: lighter"><i class="mdi mdi-backspace" style="font-size: 18px;margin-right: 10px;"></i>{% trans %}Back to list{% endtrans %}</a>
                <button type="submit"  class="btn btn-sm bg-primary text-white p-2" style="margin-left: 10px;font-weight: lighter">

                    {% if (titre is same as "Ajouter le Centre de Gestion") %}
                        <i class="mdi mdi-database-edit" style="font-size: 18px;margin-right: 10px"></i>Ajouter le Centre de Gestion
                    {% else %}
                        <i class="mdi mdi-database-edit" style="font-size: 18px;margin-right: 10px"></i>Modifier le Centre de Gestion
                    {% endif %}
                </button>
                
                {{ form_end(form) }}
            </div>
        </div>


        <!--Modification de l'dr -->

    </section>

    <script src="{{ asset('assets/webapp/assets/vendors/jquery/jquery.min.js') }}"></script>



{% endblock %}

