{% extends 'template_base.html.twig' %}

{% block Title %}
    {% trans %}SNVLT{% endtrans %} - UGF
{% endblock %}

{% block titre_page %}
    <h2 class="text-dark font-weight-bold mb-2">
        <img src="{{ asset('assets/images/webapp/cgf.png') }}" height="64" alt="ugf">  UGF - { UNITE DE GESTION FORESTIERE}
    </h2>
    <div class="d-sm-flex justify-content-xl-between align-items-center mb-2">
        <div class="btn-group p-1 rounded-5 " role="group" aria-label="Basic example">
            <a class="btn btn-inverse-danger p-2 mt-2" style="border: 0px; font-size: 16px;" href="{{ path('ugf.edit') }}"> <i class="mdi mdi-plus-circle me-2" style="font-size: 20px;"></i>{% trans %}Add{% endtrans %}</a>
        </div>
    </div>
{% endblock %}


 {% block notifs %}
     {% include 'base/notifs.html.twig' %}
 {% endblock %}


 {% block menu %}
     {% include 'base/menu.html.twig' %}
 {% endblock %}

{% block page_content %}

    <link rel="stylesheet" href="{{ asset('assets/webapp/assets/vendors/simple-datatables/style.css') }}">
    <section class="section">
        <div class="card">

            <div class="card-body">
                <table class="table" id="ugfs">
                    <thead>
                    <tr style="background: darkgreen; color:white;">
                        <th>UGF</th>
                        <th>{% trans %}Manager{% endtrans %}</th>
                        <th>{% trans %}Manager email{% endtrans %}</th>
                        <th>{% trans %}Mobile Phone{% endtrans %}</th>
                        <th>CG</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ugf in liste_ugfs %}

                        <tr>
                            <td class="text-dark fw-bold"><a class="link-dark editBtn" style="font-weight: bold;color: #370905" href="{{ path('ugf.edit', {'id_ugf': ugf.id })}}" id="{{ ugf.id }}">{{ ugf.denomination }}</a></td>
                            <td>{{ ugf.personneRessource }}</td>
                            <td>{{ ugf.emailPersonneRessource }}</td>
                            <td>{{ ugf.mobilePersonneRessource }}</td>
                            <td>{{ ugf.codeDcg.denomination}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </section>

    <script src="{{ asset('assets/webapp/assets/vendors/simple-datatables/simple-datatables.js') }}"></script>
    <script src="{{ asset('assets/webapp/assets/vendors/jquery/jquery.min.js') }}"></script>

    <script>
        // Simple Datatable
        let table1 = document.querySelector('#ugfs');
        let dataTable = new simpleDatatables.DataTable(table1);
    </script>

{% endblock %}

