{% endblock %}

{% block titre_page %}
    <h2 class="text-dark font-weight-bold mb-2">
        <img src="{{ asset('assets/images/webapp/publish_report.png') }}" alt="rapport">  Soumission du rapport N° {{ rapport_oi.id }} - <span class="badge p-2 bg-danger text-white" style="font-size: 16px;" >{{ rapport_oi.codeOi.sigle }}</span>
    </h2>
{% endblock %}


 {% block notifs %}
     {% include 'base/notifs.html.twig' %}
 {% endblock %}

 {% block menu %}
     {% include 'base/menu.html.twig' %}
 {% endblock %}

