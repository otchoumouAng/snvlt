<div id="tracking-portal">
    <div class="tracking-header">
        <a href="#" id="back-to-list" class="back-button" title="Retour Ã  la liste">
            <i class="ph-fill ph-arrow-left"></i>
        </a>
        <div class="tracking-title">
            <h1>Suivi de la Demande</h1>
            <p>
                Demande #<span id="tracking-demande-id">{{ demande.id }}</span> - {{ demande.titre }}
            </p>
        </div>
    </div>

    <!-- STEP PROGRESS -->
    <div class="stepper-container">
        <!-- Ligne grise -->
        <div class="progress-track"></div>
        <!-- Barre bleue -->
        <div class="progress-bar"></div>

        <ol class="stepper">
            {% for etape in etapes %}
                <li 
                    class="stepper-item {{ etape.status }}" 
                    data-step-id="{{ etape.id }}"
                >
                    <div class="circle">
                        {% if etape.status == 'completed' %}
                            âœ“
                        {% endif %}
                    </div>
                    <h3 class="stepper-title">{{ etape.nom }}</h3>
                    {% if etape.date %}
                        <p class="stepper-date">{{ etape.date|date("d/m/Y") }}</p>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    </div>

    <div id="step-details-container">
        <div id="step-details-placeholder">
            <i class="ph-light ph-info"></i>
            <p>Cliquez sur une Ã©tape complÃ©tÃ©e pour voir les dÃ©tails du traitement.</p>
        </div>
        <div id="step-details-content"></div>
    </div>
</div>

<style>
/* --- CONTENEUR --- */
.stepper-container {
    position: relative;
    margin: 40px auto;
    width: 80%;
    height: 70px;
}

/* --- LIGNE GRISE --- */
.progress-track {
    position: absolute;
    top: 18px;
    left: 0;
    width: 100%;
    height: 6px;
    background: #e0e0e0;
    border-radius: 3px;
    z-index: 1;
}

/* --- BARRE BLEUE --- */
.progress-bar {
    position: absolute;
    top: 18px;
    left: 0;
    width: 0; /* animÃ©e en JS */
    height: 6px;
    background: linear-gradient(90deg, #2196f3, #42a5f5, #64b5f6);
    border-radius: 3px;
    z-index: 2;
    transition: width 1s cubic-bezier(0.77, 0, 0.175, 1);
    background-size: 200% auto;
    animation: shimmer 3s linear infinite;
}

@keyframes shimmer {
    0% { background-position: 0% center; }
    100% { background-position: 200% center; }
}

/* --- STEPPER --- */
.stepper {
    display: flex;
    justify-content: space-between;
    list-style: none;
    padding: 0;
    margin: 0;
    position: relative;
    z-index: 3; /* les cercles au-dessus de la barre */
}

/* --- Ã‰TAPE --- */
.stepper-item {
    flex: 1;
    text-align: center;
    position: relative;
}

/* Cercle */
.stepper-item .circle {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    border: 3px solid gray;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    background: white;
    color: gray;
    transition: all 0.5s ease;
}

/* --- STATUTS --- */
.stepper-item.completed .circle {
    background: linear-gradient(145deg, #2ecc71, #27ae60);
    border-color: #27ae60;
    color: white;
    transform: scale(1.2);
    animation: bounce 0.6s;
}
.stepper-item.completed:hover .circle {
    box-shadow: 0 0 15px rgba(46, 204, 113, 0.7);
}

.stepper-item.active .circle {
    border-color: #2196f3;
    color: #2196f3;
    box-shadow: 0 0 10px rgba(33,150,243,0.6);
    animation: pulse 1.5s infinite;
}

.stepper-item.upcoming .circle {
    border-color: gray;
    color: gray;
}

/* --- TEXTES --- */
.stepper-title {
    margin-top: 8px;
    font-size: 14px;
    font-weight: bold;
    transition: color 0.3s ease;
}
.stepper-item.completed .stepper-title {
    color: #27ae60;
}
.stepper-item.active .stepper-title {
    color: #2196f3;
}
.stepper-item.upcoming .stepper-title {
    color: black;
}

.stepper-date {
    font-size: 12px;
    color: #666;
}

/* --- ANIMATIONS --- */
@keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(33,150,243,0.6); }
    70% { box-shadow: 0 0 0 15px rgba(33,150,243,0); }
    100% { box-shadow: 0 0 0 0 rgba(33,150,243,0); }
}

@keyframes bounce {
    0% { transform: scale(1); }
    50% { transform: scale(1.3); }
    100% { transform: scale(1.2); }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const items = document.querySelectorAll(".stepper-item");
    const progressBar = document.querySelector(".progress-bar");

    // Nombre d'Ã©tapes terminÃ©es
    let completedSteps = document.querySelectorAll(".stepper-item.completed").length;
    let activeStep = document.querySelector(".stepper-item.active");

    // Calcul progression
    let percent = ((completedSteps + (activeStep ? 0.5 : 0)) / (items.length - 1)) * 100;

    // Animation largeur
    setTimeout(() => {
        progressBar.style.width = percent + "%";
    }, 200);

    // Affichage dÃ©tails au clic
    items.forEach(item => {
        item.addEventListener("click", () => {
            if (item.classList.contains("completed") || item.classList.contains("active")) {
                document.getElementById("step-details-content").innerHTML =
                    `<h4 style="color:#2196f3">ðŸ”Ž Ã‰tape: ${item.querySelector(".stepper-title").innerText}</h4>
                     <p>Date: ${item.querySelector(".stepper-date")?.innerText || "â€”"}</p>`;
            }
        });
    });
});
</script>
