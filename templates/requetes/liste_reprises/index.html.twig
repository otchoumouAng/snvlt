                            '<td><span>' + liste_reprise[i].dr  + '</span></td>'+
                            '<td><span>' + liste_reprise[i].cef  + '</span></td>';

                        contenu = contenu +'</tr>';
                    }
                    contenu = contenu +'</tbody</table>';
                    document.querySelector('.contenu_div').innerHTML = contenu;
					
					let table = new DataTable('#reprises', {
                            responsive: true,
                            layout: {
