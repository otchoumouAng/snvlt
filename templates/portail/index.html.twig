    <script>
        window.onload = function () {



            // Graphique en PIE pour les 10 essencess

            var chartpie = document.querySelector("#chartpie");
            var optionsessence = {
                series: [
                    {% for essence in liste_essences %}
                        Math.round({{essence.cubage}}),
                    {% endfor %}
                ],
                chart: {
                    /*width: 450,*/
                    height: 250,
                    type: 'pie',
                },
                labels: [
                    {% for essence in liste_essences %}
                    '{{ essence.nomVernaculaire}}',
                    {% endfor %}
                ],
                responsive: [{
                    breakpoint: 300,
                    options: {
                        chart: {
                            width: 200
                        },
                        title:'Essences',
                        legend: {
                            position: 'bottom'
                        }
                    }
                }]
            };

            var chartEssence = new ApexCharts(chartpie, optionsessence);
            chartEssence.render();


            var options_transfo = {
                series: [{
                    name: 'Sciage',
                    data: [
                        {% for transfo in donnees_transformation %}
                            {{ transfo.sciage}},
                        {% endfor %}
                    ]
                }, {
                    name: 'Déroulage',
                    data: [
                        {% for transfo in donnees_transformation %}
                            {{ transfo.deroulage}},
                        {% endfor %}
                    ]
                }, {
                    name: 'Tranchage',
                    data: [
                        {% for transfo in donnees_transformation %}
                            {{ transfo.tranchage}},
                        {% endfor %}
                    ]
                }],
                chart: {
                    type: 'bar',
                    height: 250
                },
                plotOptions: {
                    bar: {
                        horizontal: false,
                        columnWidth: '55%',
                        endingShape: 'rounded'
                    },
                },
                dataLabels: {
                    enabled: false
                },
                stroke: {
                    show: true,
                    width: 2,
                    colors: ['transparent']
                },
                xaxis: {
                    categories: ['Jan', 'Fev', 'Mar', 'Avr', 'Mai', 'Juin', 'Juil', 'Aout', 'Sep', 'Oct', 'Nov', 'Dec'],
                },
                yaxis: {
                    title: {
                        text: '(m3)'
                    }
                },
                fill: {
                    opacity: 1
                },
                tooltip: {
                    y: {
                        formatter: function (val) {
                            return  val + "m<sup>3</sup>"
                        }
                    }
                }
            };

            var chart_transfo = new ApexCharts(document.querySelector("#chart_transfo"), options_transfo);
            chart_transfo.render();



        // Chart Documents

            var options_docs = {
                series: [{
                    data: [
                        {% for doc in docs_delivres %}
                            {{ doc.nb_doc}},
                        {% endfor %}
                    ]
                }],
                chart: {
                    type: 'bar'
                },
                plotOptions: {
                    bar: {
                        borderRadius: 4,
                        horizontal: true,
                    }
                },
                dataLabels: {
                    enabled: false
                },
                xaxis: {
                    categories: [
                        {% for doc in docs_delivres %}
                            '{{ doc.docname}}',
                        {% endfor %}
                    ],
                }
            };

            var chart_docs = new ApexCharts(document.querySelector("#chart_docs"), options_docs);
            chart_docs.render();
        }

        function explodePie (e) {
            if(typeof (e.dataSeries.dataPoints[e.dataPointIndex].exploded) === "undefined" || !e.dataSeries.dataPoints[e.dataPointIndex].exploded) {
                e.dataSeries.dataPoints[e.dataPointIndex].exploded = true;
            } else {
                e.dataSeries.dataPoints[e.dataPointIndex].exploded = false;
            }
            e.chart.render();

        }

        function toolTipFormatter(e) {
            var str = "";
            var total = 0 ;
            var str3;
            var str2 ;
            for (var i = 0; i < e.entries.length; i++){
                var str1 = "<span style= \"color:"+e.entries[i].dataSeries.color + "\">" + e.entries[i].dataSeries.name + "</span>: <strong>"+  e.entries[i].dataPoint.y + "</strong> <br/>" ;
                total = e.entries[i].dataPoint.y + total;
                str = str.concat(str1);
            }
            str2 = "<strong>" + e.entries[0].dataPoint.label + "</strong> <br/>";
            str3 = "<span style = \"color:Tomato\">Total: </span><strong>" + total + "</strong><br/>";
            return (str2.concat(str)).concat(str3);
        }

        function toggleDataSeries(e) {
            if (typeof (e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
                e.dataSeries.visible = false;
            }
            else {
                e.dataSeries.visible = true;
            }
            chart.render();
        }
    </script>
