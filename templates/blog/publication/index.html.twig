{% block page_content %}
    <link rel="stylesheet" href="{{ asset('assets/webapp/assets/vendors/simple-datatables/style.css') }}">
    <section class="section">
        <div class="card">
            <div class="card-body">
                <table class="table table-responsive" id="drs">
                    <thead>
                    <tr style="background: #3404f5;color: #fcf8f8">
                        <th >{% trans %}Titre{% endtrans %}</th>
                        <th>{% trans %}Cat√©gorie{% endtrans %}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for pub in publications %}

                        <tr style="background-color: #e6f8e7">
                            <td class="text-dark fw-bold"><a class="link-dark editBtn" style="font-weight: bold;color: #370905" href="{{ path('publication_blog.edit', {'id_publication': pub.id })}}" id="{{ pub.id }}">{{ pub.libellePublication}}</a></td>
                            <td class="text-dark fw-bold"><span  class="badge p-1 rounded-5" style="font-size: 20px;color: #fefefe;background-color: #0f3a0f" >{{ pub.codeCategory.libelle}}</span></td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </section>

    <script src="{{ asset('assets/webapp/assets/vendors/simple-datatables/simple-datatables.js') }}"></script>
